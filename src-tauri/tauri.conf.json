{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mog",
  "version": "0.2.2",
  "identifier": "com.mog.editor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "mog",
        "width": 800,
        "height": 600,
        "maximized": true,
        "titleBarStyle": "Transparent",
        "decorations": true

      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
      }
  }
}

